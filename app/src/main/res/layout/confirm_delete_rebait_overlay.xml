<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_create_ov"
    android:layout_width="410dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/overlaybackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delete_rebait_outline"
        android:layout_width="375dp"
        android:layout_height="242dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/border_textbox"
        android:backgroundTint="#F0FFF9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/delete_rebait_warning_outline"
            android:layout_width="288dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/border_textbox"
            android:backgroundTint="#FBE4D6"
            android:outlineProvider="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_rebait_title"
            app:layout_constraintVertical_bias="0.436">


            <View
                android:id="@+id/view"
                android:layout_width="10dp"
                android:layout_height="92dp"
                android:background="#F44336"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete_rebait_warning_symbol"
                android:layout_width="36dp"
                android:layout_height="28dp"
                app:srcCompat="?android:attr/alertDialogIcon"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="5dp" />

            <TextView
                android:id="@+id/delete_rebait_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="9dp" />

            <TextView
                android:id="@+id/delete_rebait_warning_desc"
                android:layout_width="252dp"
                android:layout_height="50dp"
                android:text="By deleting this project the associated notes will be deleted"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="34dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/delete_rebait_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Delete Rebait"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/delete_rebait_confirm_button"
            android:layout_width="138dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/eco_green"
            android:onClick="onClickRegister"
            android:text="Delete Rebait"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="188dp" />

        <Button
            android:id="@+id/delete_rebait_cancel_button"
            android:layout_width="138dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/mapbox_blue"
            android:onClick="onClickRegister"
            android:outlineProvider="none"
            android:text="Cancel"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toStartOf="@+id/delete_rebait_confirm_button"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="188dp" />

        <ImageButton
            android:id="@+id/delete_rebait_close_window_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFF9"
            app:srcCompat="@drawable/mapbox_ic_clear"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="12dp" />

        <TextView
            android:id="@+id/delete_rebait_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this Rebait?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="45dp" />

        <TextView
            android:id="@+id/delete_rebait_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can't undo this action!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="64dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>